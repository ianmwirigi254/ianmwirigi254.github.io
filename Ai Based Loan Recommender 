print("\n---AI BASED LOAN RECOMMENDER SYSTEM---")
name = input("Enter name: ")
fuliza_limit = float(input("Enter fuliza limit: "))
if fuliza_limit < 0:
    print("Error: fuliza cannot be negative")
    exit()
salary = float(input("Enter your monthly salary: "))
if salary < 0:
    print("Error: salary cannot be negative")
    exit()
crb_status = input("Enter Crb status:listed/not listed ")

if crb_status == "listed":
    category = "Not Eligible"
    maximum = 0
    remarks = "CRB Issues Detected"

elif crb_status == "not listed":

    if fuliza_limit > 10000 and salary > 50000:
        category = "Platinum loan"
        maximum = 1000000
        remarks = "Excellent Borrower" 
    elif 5000 <= fuliza_limit <= 10000 and 30000 <= salary <=50000:
        category = "Gold Loan"
        maximum = 500000
        remarks = "Reliable Borrower" 
    elif fuliza_limit < 5000 and salary < 30000:
        category = "Silver Loan"
        maximum = 100000
        remarks = "Fair Borrower"
    else:
        print("Error! wrong input")
else:
    print("Enter crb status either listed or not listed")
    exit()     

print("\n---Loan Reccomendation Result--- ") 
print("Applicant: ",name)       
print("Fuliza Limit: (KES)",fuliza_limit)
print("Salary: (KES)",salary)
print("CRB Status: ",crb_status)
print("Loan Category: ",category)
print("Maximum Loan Limit: ",maximum)
print("Remarks: ",remarks)